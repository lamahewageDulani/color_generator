<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white"
    android:id="@+id/main_layout">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_gravity="center">

    <TextView
        android:id="@+id/tv_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/red_value"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/et_red"
        android:layout_width="match_parent"
        android:inputType="phone"
        android:textColor="@color/black"
        android:background="@drawable/box_background"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_red"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:id="@+id/tv_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/blue_value"
        android:textColor="@color/black"
        android:layout_below="@+id/et_red"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/et_blue"
        android:layout_width="match_parent"
        android:inputType="phone"
        android:textColor="@color/black"
        android:background="@drawable/box_background"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_blue"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:id="@+id/tv_green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/green_value"
        android:textColor="@color/black"
        android:layout_below="@+id/et_blue"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/et_green"
        android:layout_width="match_parent"
        android:inputType="phone"
        android:textColor="@color/black"
        android:background="@drawable/box_background"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_green"
        android:layout_marginBottom="50dp"/>

    <Button
        android:id="@+id/btn_generate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/generate"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:background="@drawable/btn_background"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/et_green"
        android:onClick="generateColor"/>

    </RelativeLayout>

</LinearLayout>